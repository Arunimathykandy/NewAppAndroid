<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/symp_frag"
            android:background="#ffffff">
            <Spinner
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:id="@+id/gender_spinner"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="65dp"
                android:prompt="@string/enter_gender"
                android:padding="10dp" />
            <EditText
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:id="@+id/age_input"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="65dp"
                android:inputType="number"
                android:hint="@string/enter_age"
                android:padding="10dp"
                android:layout_below="@+id/gender_spinner"/>
            <Spinner
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:id="@+id/body_part_spinner"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="65dp"
                android:prompt="@string/enter_body"
                android:padding="10dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_symp"
                android:text="Done"
                android:layout_below="@+id/body_part_spinner"
                android:layout_marginLeft="150dp"
                android:background="#19a0af"
                android:textColor="#ffffff"
                android:layout_marginTop="400dp"/>
        </FrameLayout>




