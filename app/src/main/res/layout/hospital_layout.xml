<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">



    <TextView
        android:id="@+id/listview_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Hospital Name"
        android:textSize="15sp"
        android:textStyle="bold" />


   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/hosp_image"
       android:src="@drawable/hospital_pic"
       android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:text="About:"/>
    <TextView
        android:id="@+id/address1"
        android:gravity="left"
        android:layout_marginTop="260dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:maxLines="4"
        android:lines="4"
        android:text="@string/description"/>
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="60dp"
        android:background="@color/appBlue"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="60dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hosp_image_one"
        android:src="@drawable/ic_action_face_unlock"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="25dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hosp_image_two"
        android:src="@drawable/ic_action_history"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="115dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hosp_image_three"
        android:src="@drawable/ic_communication_contacts"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="200dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hosp_image_four"
        android:src="@drawable/ic_toggle_star"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="280dp"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/hosp_text_one"
    android:text="username"
    android:layout_marginTop="450dp"
    android:layout_marginLeft="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hosp_text_two"
        android:text="feature"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="125dp"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/hosp_text_three"
    android:text="feature"
    android:layout_marginTop="450dp"
    android:layout_marginLeft="205dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hosp_text_four"
        android:text="Rating"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="285dp"/>
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="60dp"
        android:background="@color/appBlue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/working"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="15dp"
            android:text="Working Hours : "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/specialities"
            android:layout_marginTop="530dp"
            android:layout_marginLeft="15dp"
            android:text="Specialities : "/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comp_hospital"
        android:text="Compare"
        android:onClick="CompHosp"
        android:background="#19a0af"
        android:textColor="#ffffff"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="250dp"/>


</RelativeLayout>

</ScrollView>
